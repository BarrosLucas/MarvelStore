<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heightThumb"
                android:src="@drawable/ilustracao_retrato"/>
            <TextView
                android:id="@+id/title"
                android:paddingHorizontal="4dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textStyle="bold"
                android:textColor="@color/titleComicColor"
                android:textSize="@dimen/titleComicItemList"
                android:fontFamily="sans-serif-condensed-light" />
            <TextView
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="4dp"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD 0,00"
                android:textColor="@color/subtitleComicColor"
                android:textSize="@dimen/subtitleComicItemList"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    
</LinearLayout>