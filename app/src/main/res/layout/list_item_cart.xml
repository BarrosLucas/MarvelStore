<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightCard"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/pic"
                android:layout_width="0dp"
                android:layout_height="@dimen/heightThumb"
                android:layout_weight="2"
                android:layout_margin="@dimen/marginImg"
                android:src="@drawable/ilustracao_retrato"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/heightThumb"
                android:orientation="vertical"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Titulo"
                    android:textColor="@color/subtitleComicColor"
                    android:textSize="@dimen/titlesCart"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/less"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-" />
                    <TextView
                        android:id="@+id/amount"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1"
                        android:textSize="@dimen/priceDescriptionSize"
                        android:textColor="@color/subtitleComicColor"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed-light" />
                    <Button
                        android:id="@+id/more"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+" />
                </LinearLayout>
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD 0,00"
                    android:textColor="@color/titleComicColor"
                    android:textSize="@dimen/subtitleComicItemList"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="@dimen/heightThumb"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/delete"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_delete_35"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>